  <script>
    // --- Demo data (thay b·∫±ng d·ªØ li·ªáu th·∫≠t c·ªßa b·∫°n) ---
    const projects = [
      {id:1,title:'Web b√°n h√†ng m·∫´u',tags:['web','tool'],desc:'M·ªôt e-commerce nh·ªè s·ª≠ d·ª•ng Stripe v√† static CMS. Responsive, PWA, v√† t·ªëi ∆∞u SEO.',live:'#',code:'#'},
      {id:2,title:'Dashboard analytics',tags:['web'],desc:'Dashboard realtime cho theo d√µi KPI v·ªõi charts v√† export CSV.',live:'#',code:'#'},
      {id:3,title:'Thi·∫øt k·∫ø UI mobile',tags:['ui'],desc:'Prototype app di ƒë·ªông ‚Äî Figma ‚Üí code, micro-interactions.',live:'#',code:'#'},
      {id:4,title:'CLI developer tool',tags:['tool'],desc:'Script t·ª± ƒë·ªông ho√° workflow build & deploy cho d·ª± √°n.',live:'#',code:'#'}
    ];

    const projectsGrid = document.getElementById('projectsGrid');
    const filterBar = document.getElementById('filterBar');
    const chips = filterBar.querySelectorAll('.chip');
    const modal = document.getElementById('modal');

    function renderProjects(filter='all'){
      projectsGrid.innerHTML='';
      const list = projects.filter(p=> filter==='all' || p.tags.includes(filter));
      list.forEach(p=>{
        const el = document.createElement('div'); el.className='project';
        el.innerHTML = `<div style="font-weight:700">${p.title}</div><div class="small" style="color:var(--muted);margin-top:6px">${p.desc.slice(0,100)}...</div><div class="tags">${p.tags.map(t=>`<div class="tag">${t}</div>`).join('')}</div>`;
        el.addEventListener('click',()=>openModal(p));
        projectsGrid.appendChild(el);
      })
    }

    function openModal(p){
      document.getElementById('modalTitle').textContent = p.title;
      document.getElementById('modalDesc').textContent = p.desc;
      document.getElementById('modalTags').innerHTML = p.tags.map(t=>`<span class="tag">${t}</span>`).join(' ');
      document.getElementById('modalLive').href = p.live || '#';
      document.getElementById('modalCode').href = p.code || '#';
      modal.classList.remove('hidden');
    }

    document.getElementById('closeModal').addEventListener('click',()=>modal.classList.add('hidden'));
    modal.addEventListener('click',(e)=>{ if(e.target===modal) modal.classList.add('hidden') });

    // Filter behaviour
    chips.forEach(c=> c.addEventListener('click', ()=>{
      chips.forEach(x=>x.classList.remove('active'));
      c.classList.add('active');
      const f = c.dataset.filter;
      renderProjects(f);
    }))

    // Contact & draft saving
    const contactForm = document.getElementById('contactForm');
    const saveDraftBtn = document.getElementById('saveDraft');
    const draftKey = 'portfolio_contact_draft_v1';

    // load draft
    function loadDraft(){
      const d = localStorage.getItem(draftKey);
      if(d){
        try{const obj=JSON.parse(d);document.getElementById('cname').value=obj.name||'';document.getElementById('cemail').value=obj.email||'';document.getElementById('cmsg').value=obj.msg||'';}catch(e){}
      }
    }
    loadDraft();

    saveDraftBtn.addEventListener('click', ()=>{
      const dd={name:document.getElementById('cname').value,email:document.getElementById('cemail').value,msg:document.getElementById('cmsg').value};
      localStorage.setItem(draftKey,JSON.stringify(dd));
      alert('ƒê√£ l∆∞u nh√°p v√†o tr√¨nh duy·ªát.');
    })

    contactForm.addEventListener('submit', (e)=>{
      e.preventDefault();
      // Basic validation
      const name = document.getElementById('cname').value.trim();
      const email = document.getElementById('cemail').value.trim();
      const msg = document.getElementById('cmsg').value.trim();
      if(!name || !email || !msg){alert('Vui l√≤ng ƒëi·ªÅn h·∫øt th√¥ng tin.');return}
      // In demo we open email client via mailto. Replace with real API in production.
      const body = encodeURIComponent(`Xin ch√†o, t√¥i t√™n ${name}.\n\n${msg}\n\nEmail: ${email}`);
      window.location.href = `mailto:you@example.com?subject=${encodeURIComponent('Li√™n h·ªá t·ª´ portfolio')}&body=${body}`;
    })

    // copy email
    document.getElementById('copyEmail').addEventListener('click', async ()=>{
      try{await navigator.clipboard.writeText('you@example.com');alert('ƒê√£ sao ch√©p email!') }catch(e){alert('Tr√¨nh duy·ªát kh√¥ng cho ph√©p sao ch√©p, vui l√≤ng sao ch√©p th·ªß c√¥ng.')}
    })

    // contact button
    document.getElementById('contactMe').addEventListener('click', ()=>{document.querySelector('#contact input').focus();window.scrollTo({top:document.querySelector('#contact').offsetTop-20,behavior:'smooth'})})

    // theme toggle (simple demo: persist in localStorage)
    const themeToggle = document.getElementById('themeToggle');
    function setTheme(mode){
      if(mode==='light'){
        document.documentElement.style.setProperty('--bg','#f3f8ff');
        document.documentElement.style.setProperty('--card','#ffffff');
        document.documentElement.style.setProperty('--muted','#4b5563');
        document.documentElement.style.setProperty('--accent','#0ea5a2');
        themeToggle.textContent='‚òÄÔ∏è';
      }else{
        document.documentElement.style.setProperty('--bg','#071024');
        document.documentElement.style.setProperty('--card','#0b1220');
        document.documentElement.style.setProperty('--muted','#9aa4b2');
        document.documentElement.style.setProperty('--accent','#06b6d4');
        themeToggle.textContent='üåô';
      }
      localStorage.setItem('portfolio_theme',mode || 'dark');
    }
    themeToggle.addEventListener('click', ()=> setTheme(localStorage.getItem('portfolio_theme')==='dark'?'light':'dark'));
    setTheme(localStorage.getItem('portfolio_theme') || 'dark');

    // small helpers
    document.getElementById('year').textContent = new Date().getFullYear();
    document.getElementById('updatedAt').textContent = new Date().toLocaleDateString();

    // initial render
    renderProjects('all');

    // Allow quick edit of name (double-click) ‚Äî demo of interactivity
    const nameEl = document.getElementById('namePlaceholder');
    nameEl.addEventListener('dblclick', ()=>{
      const val = prompt('Nh·∫≠p t√™n hi·ªÉn th·ªã:', nameEl.textContent);
      if(val){ nameEl.textContent = val; document.querySelector('.logo').textContent = (val.split(' ')[0]||'YK').slice(0,2).toUpperCase(); document.querySelector('.avatar').textContent = (val.split(' ')[0]||'YK').slice(0,2).toUpperCase(); }
    })

    // allow download CV demo (creates a simple text file on the fly)
    document.getElementById('downloadCv').addEventListener('click', (e)=>{
      e.preventDefault();
      const text = `CV - T√™n c·ªßa b·∫°n\n\nK·ªπ nƒÉng:\n- HTML/CSS\n- JS\n- React\n\nLi√™n h·ªá: you@example.com`;
      const blob = new Blob([text], {type:'text/plain'});
      const url = URL.createObjectURL(blob);
      const a = document.createElement('a'); a.href = url; a.download = 'CV-Ten-cua-ban.txt'; document.body.appendChild(a); a.click(); a.remove(); URL.revokeObjectURL(url);
    })

    // Accessibility small improvement: trap focus inside modal when opened (basic)
    document.addEventListener('keydown', (e)=>{
      if(e.key==='Escape' && !modal.classList.contains('hidden')) modal.classList.add('hidden');
    })

  </script>
